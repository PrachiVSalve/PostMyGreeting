<body>
    <div class="container-fluid contact py-5">
        <div class="container py-5">
            <div class="p-5 bg-light rounded">
                <div class="row g-4">
                    <h2>Payment Mode</h2>
                  
                    <form class="pt-3"asp-area="" asp-action="CheckOut" asp-controller="Cart" method="post">
                       @*  <h5> Order No: @TempData["OrderID"]  </h5> *@
                            Payment Mode:
                            <select name="PaymentMode" asp-items="@Html.GetEnumSelectList<PaymentModeEnum>()">
                                <option value="0">Select Payment</option>
                            </select>
                        <input type="submit" asp-action="CheckOut" asp-controller="Cart" value="Make Payment" class="btn  border-2 border-secondary text-white h-100" style="background-color:blueviolet" />
                      

                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
