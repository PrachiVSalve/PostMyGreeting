@model IEnumerable<Order>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Order List</h4>

            <div class="table-responsive pt-3">
                 
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Order No</th>
                            <th>Order Date</th>
                            <th>User Name </th>
                            <th>StoreNme</th>
                            <th>IsPaid</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int srno = 1;
                        }
                        @foreach (var temp in Model)
                        {

                            <tr>
                                <td>@srno</td>
                                <td>@temp.OrderId</td>
                                <td> @temp.OrderDate.ToString("dd-MM-yyyy") </td>
                               <td>@temp.User.FullName</td>
                               <td>@temp.Store.StoreName</td>
                                @if(temp.IsPaid)
                                {
                                    <td class="alert-success">Yes</td>
                                }
                                else
                                {
                                    <td class="alert-danger">No</td>

                                }
                                <td>
                                     
                                    <a class="btn btn-outline-primary"asp-controller="Order" asp-action="viewdispatchdetails" asp-route-id="@temp.OrderId">View&dispatch</a>
                                </td>
                            </tr>
                            srno++;
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>