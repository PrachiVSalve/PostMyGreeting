@model IEnumerable<GreetingCard>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">GreetingCard</h4>
            
            <div class="table-responsive pt-3">
                <a class="btn btn-success" asp-action="Create"> Create </a>
                <hr />
                <table class="table table-bordered">
                    <thead>
                        <tr>
                           <th>#</th>
                           <th>Card Title</th>
                           <th> GreetingCards Photos </th>
                           <th>Price </th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int srno = 1;
                        }
                        @foreach(var temp in Model)
                        {
                            <tr>
                                <td>@srno</td>
                                <td>@temp.CardTitle</td>
                                <td>
                                    <img src="@temp.PhotoPath" width="100" height="100" />
                                </td>
                                <td>@temp.Product.Price</td>
                                 
                                <td>
                                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@temp.GreetingCardId">Edit</a>
                                    |
                                    <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@temp.GreetingCardId">Delete</a>
                                    |
                                    <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@temp.GreetingCardId">Details</a>
                                </td>
                            </tr>
                            srno++;
                        }
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>