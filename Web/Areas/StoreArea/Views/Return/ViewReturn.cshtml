 @model Refund
<div class="col-lg-6">

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Order Refund</h5>
            <h5> Refund For Return Id:@ViewBag.ReturnId </h5>
            <div>
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-info">@ViewBag.Message</div>
                }

            </div>
            <!-- Vertical Form -->
            <form class="row g-3" asp-action="ViewReturn" method="Post">
                <input type="hidden" asp-for="ReturnId" value="@ViewBag.ComplaintID" />

                <div class="col-12">
                    <label class="form-label">Refund Date</label>
                    <input asp-for="RefundDate" class="form-control" />
                    <span asp-validation-for="RefundDate" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label class="form-label">Refund Amount</label>
                    <textarea asp-for="RefundAmount" class="form-control">
                    </textarea>
                    <span asp-validation-for="RefundAmount" class="text-danger"></span>
                </div>



                <div class="text-center">
                    <button type="submit" asp-action="viewdetails" class="btn btn-primary">Save</button>
                </div>
            </form><!-- Vertical Form -->

        </div>
    </div>


</div>