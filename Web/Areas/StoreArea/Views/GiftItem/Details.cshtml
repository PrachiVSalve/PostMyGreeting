 @model GiftItemVM
<div class="col-lg-12 grid-margin ">
    <div class="card w-100">
        <div class="card-body">
            <h3 class="card-title">GIFTITEM</h3>
             
            <div class="table-responsive pt-4">
                <table class="table col-12" style="width:100%;">
                    <thead>
                        <tr>
                            <th>Gift Item Title</th>                           
                            <th>
                                @Model.GiftItemTitle
                            </th>
                        </tr>
                        <tr>
                            <th> Price </th>
                            <th>
                                @Model.Price
                            </th>
                        </tr>
                        <tr>
                            <th>
                                Category Name
                            </th>
                            <th>
                                @Model.CategoryName
                                
                            </th>
                        </tr>
                        <tr>
                            <th>
                                SubCategory Name
                            </th>
                            <th>
                                @Model.SubCategoryName
                            </th>
                        </tr>

                        <tr>
                            <th>
                                Product Type
                            </th>
                            <th>
                                @Enum.GetName(typeof(ProductTypeEnum), @Model.ProductType)
                            </th>
                        </tr>
                        <tr>

                            <th>
                                Gift Item Description
                            </th>
                            <th>
                                @Model.GiftItemDescription
                            </th>
                        </tr>

                        <tr>

                            <th>
                                GiftItem Photo
                            </th>
                            <th>
                                <img style="width:40%;height:200px;" class="rounded-circle"src="@Model.PhotoPath" />
                            </th>
                        </tr>


                        </thead>


                    
                            
                     
                </table>
                <a class="btn btn-success" asp-action="Index"> Back To List </a>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $("#category").change(function () {

            $.ajax({
                url: "/StoreArea/GreetingCard/GetSubCategoryJson/" + $("#category").val(),
                type: "Get",
                contentType: "application/json",
                success: function (result) {
                    //alert(JSON.stringify(result));
                    $("#subcategory").empty();
                    for (var i = 0; i < result.length; i++) {
                        var str = "<option value='" + result[i].subCategoryId + "'>" + result[i].subCategoryName + "</option>";
                        $("#subcategory").append(str);
                    }
                },
                error: function (err) {
                    alert(JSON.stringify(err));
                }
            });

        });

    });
</script>