   @model DispatchAgency


<div class="card">
    <div class="card-body">
        <h4 class="card-title">Edit Country</h4>
        <form class="form-sample row g-3" asp-action="Edit" method="post" asp-controller="DispatchAgency">

            <input type="hidden" asp-for="DispatchAgencyId" />

            <div class="col-12 ">
                <label class=" form-label">Agency Name</label>

                <input asp-for="AgencyName" class="form-control" />
                <span asp-validation-for="AgencyName" class="text-danger"></span>
            </div>

            <div class="col-12 ">
                <label class=" form-label">Address</label>

                <textarea asp-for="Address" class="form-control" ></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="col-12 ">
                <label class=" form-label">EmailId</label>

                <input asp-for="Emial" class="form-control" />
                <span asp-validation-for="Emial" class="text-danger"></span>
            </div>
            <div class="col-12 ">
                <label class=" form-label">Mobile No</label>

                <input asp-for="MobileNo" class="form-control" />
                <span asp-validation-for="MobileNo" class="text-danger"></span>
            </div>
            <div class="col-12 ">
                <label class=" form-label">Contact Person Name</label>

                <input asp-for="ContactPerson" class="form-control" />
                <span asp-validation-for="ContactPerson" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
        <a class="btn btn-primary" asp-action="Index"> Back To List </a>
    </div>
</div>

