@model IEnumerable<Offer>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Offer table</h4>
            
            <div class="table-responsive pt-3">
                <a class="btn btn-success" asp-action="Create"> Create </a>
                <hr />
                <table class="table table-bordered">
                    <thead>
                        <tr>
                           <th>#</th>
                           <th>Offer Title</th>
                           <th>Discount</th>
                           <th>Start Date</th>
                           <th>End Date</th>
                             
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int srno = 1;
                        }
                        @foreach(var temp in Model)
                        {
                            <tr>
                                <td>@srno</td>
                                <td>@temp.OfferTitle</td>
                                <td>@temp.Discount</td>
                                <td>@temp.FromDate</td>
                                <td>@temp.ToDate</td>
                                <td>
                                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@temp.OfferId">Edit</a>
                                    |
                                    <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@temp.OfferId">Delete</a>
                                </td>
                            </tr>
                            srno++;
                        }
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>