@model State
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Create State</h4>
        <form class="form-sample" asp-action="Create"method="post">
           
            <div class="row">

                <div class="col-12 ">
                    <label class=" form-label">State Name</label>

                    <input asp-for="StateName" class="form-control" />
                    <span asp-validation-for="StateName" class="text-danger"></span>


                </div>
                <div class="col-12">
                    <label class="form-label">Select Country Name</label>
                    <select class="form-select" asp-for="CountryId" asp-items="@ViewBag.Countries">
                        <option> Select Country</option>
                    </select>
                    <span asp-validation-for="CountryId" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            
            </div>
        </form>
        <a class="btn btn-success" asp-action="Index"> Back To List </a>
    </div>
     
</div>