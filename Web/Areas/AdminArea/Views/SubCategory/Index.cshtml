 @model IEnumerable<SubCategory>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">SubCategory table</h4>

            <div class="table-responsive pt-3">
                <a class="btn btn-success" asp-action="Create"> Create </a>
                <hr />
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>SubCategory Name</th>
                            <th>Category Name </th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int srno = 1;
                        }
                        @foreach (var temp in Model)
                        {
                            <tr>
                                <td>@srno</td>
                                <td>@temp.SubCategoryName</td>
                                <td>@temp.Category.CategoryName</td>
                                 
                                <td>
                                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@temp.SubCategoryId">Edit</a>
                                    |
                                    <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@temp.SubCategoryId">Delete</a>
                                </td>
                            </tr>
                            srno++;
                        }

                    </tbody>
                </table>
                <button type="submit" class="btn btn-primary" asp-action="Index">Back To List</button>
            </div>
        </div>
    </div>
</div>