 @model Complaint
<div class="col-lg-12">

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Raise Order Complaint</h5>
            <h5> Order No:@TempData["OrderId"] </h5>
            <div>
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-info">@ViewBag.Message</div>
                }

            </div>
            <!-- Vertical Form -->
            <form class="row g-3" asp-action="RaiseComplaint" method="Post">
                <input type="hidden" asp-for="OrderId" value="@TempData["OrderId"] " />
                 
                <input type="hidden" asp-for="ProductId" id="prod" />


                <div class="col-6">
                            @await Component.InvokeAsync("GiftComplaintVC", new { orderid = @TempData["OrderId"] })
                        </div>



                        <div class="col-6">
                            @await Component.InvokeAsync("GreetingComplaintVC", new { orderid = @TempData["OrderId"] })
                        </div>
  
                   

                <div class="col-6">
                    <label class="form-label">Complaint Reason</label>
                    <input asp-for="CompliantResion" class="form-control" />
                    <span asp-validation-for="CompliantResion" class="text-danger"></span>
                </div>

                <div class="col-6">
                    <label class="form-label">Complaint Date</label>
                    <input asp-for="CompliantDate" class="form-control"/>
                     
                    <span asp-validation-for="CompliantDate" class="text-danger"></span>
                </div>



                <div class="text-center">
                    <button type="submit" class="btn btn-primary" asp-route-id="@TempData["OrderId"]"  >Save</button>
                </div>
            </form><!-- Vertical Form -->

        </div>
    </div>


</div>
<script type="text/javascript">
    $(function () {
        $("#gift").change(function () {
            if (this.checked) {
                var a = $("#giftid").val();
                $("#prod").val(a);
            }

        });


        $("#greeting").change(function () {
            if (this.checked) {
                var a = $("#greetingid").val();
                $("#prod").val(a);
            }

        });


    });
</script>
