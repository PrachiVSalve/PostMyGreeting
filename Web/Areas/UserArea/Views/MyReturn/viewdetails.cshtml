    @model ReturnVM
<div class="profile-overview">
    <h5 class="card-title">Refund Details</h5>
    <div class="row">
        <div class="col-lg-8col-md-4 label ">Refund For Return Product:</div>
        <div class="col-lg-4 col-md-8">@Model.ReturnId</div>
    </div>

    <div class="row">
        <div class="col-lg-8col-md-4 label ">Refund Date:</div>
        <div class="col-lg-4 col-md-8">@Model.RefundDate.ToString("dd-MM-yyyy")</div>
    </div>

    <div class="row">
        <div class="col-lg-8 col-md-4 label">Refund Amount :</div>
        <div class="col-lg-4 col-md-8">@Model.RefundAmount</div>
    </div>

    <div>
        <a class="btn btn-primary" asp-action="Index"> Back </a>
    </div>
</div>